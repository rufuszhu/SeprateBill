<?xml version="1.0" encoding="utf-8"?>
<TableLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/number_pad"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_alignParentStart="true"
    android:stretchColumns="0,1,2"
    android:background="@color/purple_dark"
    android:elevation="@dimen/number_elevation">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".25">

        <TextView
            android:id="@+id/bill_7"
            style="@style/NumberText"
            android:text="@string/num_seven"
            android:layout_column="0" />

        <TextView
            android:id="@+id/bill_8"
            style="@style/NumberText"
            android:text="@string/num_eight"
            android:layout_column="1" />

        <TextView
            android:id="@+id/bill_9"
            style="@style/NumberText"
            android:text="@string/num_nine"
            android:layout_column="2" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".25">

        <TextView
            android:id="@+id/bill_4"
            style="@style/NumberText"
            android:text="4"
            android:layout_column="0" />

        <TextView
            android:id="@+id/bill_5"
            style="@style/NumberText"
            android:text="5"
            android:layout_column="1" />

        <TextView
            android:id="@+id/bill_6"
            style="@style/NumberText"
            android:text="6"
            android:layout_column="2" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".25">

        <TextView
            android:id="@+id/bill_1"
            style="@style/NumberText"
            android:text="1"
            android:layout_column="0" />

        <TextView
            android:id="@+id/bill_2"
            style="@style/NumberText"
            android:text="2"
            android:layout_column="1" />

        <TextView
            android:id="@+id/bill_3"
            style="@style/NumberText"
            android:text="3"
            android:layout_column="2" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".25">

        <TextView
            android:id="@+id/bill_del"
            style="@style/NumberText"
            android:text="DEL"
            android:layout_column="0" />


        <TextView
            android:id="@+id/bill_0"
            style="@style/NumberText"
            android:text="0"
            android:layout_column="1" />

        <TextView
            android:id="@+id/bill_clear"
            style="@style/NumberText"
            android:text="CLR"
            android:layout_column="2" />

    </TableRow>


</TableLayout>
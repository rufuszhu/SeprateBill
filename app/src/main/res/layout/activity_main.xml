<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/result_wrapper"
        android:layout_weight=".3"
        android:layout_height="0dp"
        android:layout_width="match_parent">

        <include
            android:id="@+id/ll_result_layout"
            layout="@layout/result_layout" ></include>

            <View
                android:id="@+id/cover"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:background="@color/bill_pad"/>
        </FrameLayout>





    <com.example.rzhu.sepratebill.CalculatorPadViewPager
        android:overScrollMode="never"
        android:layout_weight=".7"
        android:layout_height="0dp"
        android:layout_width="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight=".8"
                android:background="@color/white_smoke">

                <include layout="@layout/number_pad"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"></include>

                <include layout="@layout/tip_number_pad"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"></include>

                </FrameLayout>

            <include layout="@layout/tip_column"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight=".2"
                android:layout_marginEnd="@dimen/number_pad_margin_right"
                android:layout_marginRight="@dimen/number_pad_margin_right"></include>
        </LinearLayout>

        <include layout="@layout/people_pad"></include>


    </com.example.rzhu.sepratebill.CalculatorPadViewPager>

</LinearLayout>

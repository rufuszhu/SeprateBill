<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white_smoke">


        <FrameLayout
            android:id="@+id/result_wrapper"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".3"
            android:elevation="@dimen/result_elevation">

            <include
                android:id="@+id/ll_result_layout"
                layout="@layout/result_layout"/>

            <View
                android:id="@+id/cover"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/bill_pad"
                android:visibility="gone" />
        </FrameLayout>


        <com.example.rzhu.sepratebill.CalculatorPadViewPager
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".7"
            android:overScrollMode="never">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".8"
                    android:background="@color/white_smoke">

                    <include
                        layout="@layout/number_pad"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"></include>

                    <include
                        layout="@layout/tip_number_pad"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"></include>

                </FrameLayout>

                <include
                    layout="@layout/tip_column"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/number_pad_margin_right"
                    android:layout_marginRight="@dimen/number_pad_margin_right"
                    android:layout_weight=".2"></include>
            </LinearLayout>

            <include layout="@layout/people_pad"></include>


        </com.example.rzhu.sepratebill.CalculatorPadViewPager>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_share_holder"
        android:layout_width="@dimen/share_number_textView_width"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/share_title"
        android:textSize="@dimen/share_btn_font_size"
        android:fontFamily="sans-serif-light"
        android:visibility="gone"/>
</RelativeLayout>
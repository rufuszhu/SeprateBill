<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="android:Theme.Material.NoActionBar">
        <item name="android:colorPrimary">@color/app_background</item>
        <item name="android:colorPrimaryDark">@color/bill_pad</item>
    </style>

    <!-- Display panel -->
    <style name="horizontal_list_items">
        <item name="android:layout_width">@dimen/landscape_display_result_item_width</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <style name="display_layout_label"
        parent="horizontal_list_items">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/result_label_font_size</item>
        <item name="android:fontFamily">"sans-serif-light"</item>
    </style>

    <style name="display_layout_number"
        parent="horizontal_list_items">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/result_label_font_size</item>
        <item name="android:fontFamily">"sans-serif-light"</item>
    </style>

    <!-- Number pad (left) -->
    <style name="number_text"
        parent="@android:style/Widget.Material.Light.Button.Borderless">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">@dimen/small_padding</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@null</item>
        <item name="android:clickable">true</item>
        <item name="android:textSize">@dimen/number_font_size_land</item>
        <item name="android:fontFamily">"sans-serif-light"</item>
    </style>
    <!--<style name="bill_number_text"-->
        <!--parent="number_text">-->
        <!--<item name="android:background">@drawable/ripple_bill</item>-->
    <!--</style>-->

    <!--<style name="tip_number_text"-->
        <!--parent="number_text">-->
        <!--<item name="android:background">@drawable/ripple_tip</item>-->
    <!--</style>-->


    <!-- Share pad (right) -->
    <style name="share_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/share_title_font_size_land</item>
        <item name="android:fontFamily">"sans-serif-light"</item>
        <item name="android:textColor">@color/share_text_color</item>
    </style>

    <style name="share_btn_text"
        parent="share_number_text">
        <item name="android:layout_width">@dimen/share_btn_width_land</item>
        <item name="android:layout_height">@dimen/share_btn_height_land</item>
    </style>

    <style name="share_number_text"
        parent="number_text">
        <item name="android:background">@drawable/ripple_share</item>
        <item name="android:textSize">@dimen/number_font_size_land</item>
        <item name="android:fontFamily">"sans-serif-light"</item>
        <item name="android:textColor">@color/share_text_color</item>
    </style>

</resources>
